<AnchorPane id="AnchorPane" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="empims.LoginController">
    <children>
        <ImageView fitHeight="420.0" fitWidth="700.0" opacity="0.46" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/1.jpg" />
            </image>
        </ImageView>
        <AnchorPane layoutX="406.0" layoutY="40.0" prefHeight="320.0" prefWidth="287.0" style="-fx-background-color: #2A3340;">
            <children>
                <TextField id="userId" fx:id="userId" layoutX="32.0" layoutY="89.0" onAction="#handlelogInAction" prefHeight="25.0" prefWidth="230.0" promptText="User ID" />
                <Text fill="#c6bcbc" layoutX="32.0" layoutY="83.0" strokeType="OUTSIDE" strokeWidth="0.0" text="User ID">
                    <font>
                        <Font name="High Tower Text Italic" size="20.0" />
                    </font>
                </Text>
                <Text fill="#c6bcbc" layoutX="32.0" layoutY="154.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password">
